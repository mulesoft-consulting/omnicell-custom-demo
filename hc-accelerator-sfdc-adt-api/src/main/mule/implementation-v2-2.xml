			<ee:variables>
				<ee:set-variable
					resource="dw/hl7/v2_2/EHRParticipant.dwl"
					variableName="ehrParticipant" />
			</ee:variables>
		</ee:transform>
		<ee:transform doc:name="Prepare Covid Flags" doc:id="09f6dbbf-79e6-4c15-b1aa-0e6a603eb486" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable resource="dw/hl7/v2_2/EHRPatientCondition.dwl" variableName="EHRPatientCondition" />
			</ee:variables>
		</ee:transform>
		<ee:transform doc:name="Prepare Composite Request"
			doc:id="654c21dc-e8b0-44ed-805d-fa0e6645fe08">
			<ee:message>
				<ee:set-payload resource="dw/compositeRequest.dwl" />
			</ee:message>
			<ee:variables>
			</ee:variables>
		</ee:transform>
	</sub-flow>
</mule>
