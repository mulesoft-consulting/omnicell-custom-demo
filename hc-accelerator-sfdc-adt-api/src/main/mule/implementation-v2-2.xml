			<ee:message>
			</ee:message>
			<ee:variables>
				<ee:set-variable
					resource="dw/hl7/v2_2/EHRPatientObservation.dwl"
					variableName="ehrObservation" />
			</ee:variables>
		</ee:transform>
		<ee:transform doc:name="Prepare Patient Visit"
			doc:id="78ac8800-b987-4a13-ad4d-f998ee72f15f">
			<ee:message>
			</ee:message>
			<ee:variables>
				<ee:set-variable
					resource="dw/hl7/v2_2/EHRPatientVisit.dwl"
					variableName="ehrPatientVisit" />
